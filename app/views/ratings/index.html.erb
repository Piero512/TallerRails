<h1>Rating de peliculas por usuario</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Username</th>
    <th>Rating</th>
    <th></th>
  </tr>
 
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.username %></td>
      <td><%= movie.rating %></td>
      <td><a href=#>Ver</a></td>
      <td><a href=#>Editar</a></td>
      <td><a href=#>Eliminar</a></td>
    </tr>
  <% end %>
</table>

<br>
<a href="ratings/new"><button type="button">New rating</button></a>
